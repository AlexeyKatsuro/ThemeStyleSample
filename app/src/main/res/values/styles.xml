<!--res/values/styles.xml-->
<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>


    <style name="Theme.MyApp.Pro">
        <item name="colorPrimary">@color/colorPrimaryPro</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPro</item>
        <item name="colorAccent">@color/colorAccentPro</item>
    </style>

    <style name="Widget.MyApp" parent="android:Widget"/>

    <style name="WelcomeView">
        <item name="imgTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
    </style>

    <style name="EditTextBig" parent="">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget">
        <item name="android:background">#03A9F4</item>
    </style>

    <style name="Widget.YellowText">
        <item name="android:textColor">#FFEB3B</item>
    </style>

    <style name="Widget.YellowText.Italic" parent="@style/Widget">
        <item name="android:textStyle">italic</item>
    </style>

</resources>